@page
@model StudentProgress.Web.Pages.StudentGroups.Details.AddStudentModel

@{
  ViewData["Title"] = "Create";
}

<a asp-page="./Index" asp-route-id="@Model.Group.Id">Back to Group</a>

<h1>Add student to @Model.Group.Name</h1>
<hr />

<turbo-frame id="addStudent" data-turbo-frame="_top">
  <div class="row add-student">
    <div>
      <form asp-page="./AddStudent" data-turbo-frame="_top">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Student.GroupId" value="@Model.Group.Id" />
        <div class="form-floating mb-3">
          <input asp-for="Student.Name" class="form-control" autofocus />
          <label asp-for="Student.Name"></label>
          <span asp-validation-for="Student.Name"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Add and add another" class="btn btn-outline-primary" asp-page-handler="AndAddAnother" />
          <input type="submit" value="Add" class="btn btn-primary" />
        </div>
      </form>
    </div>
  </div>
</turbo-frame>

@section Scripts {
  @*@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }*@
}