@page
@model StudentProgress.Web.Pages.QuestLine.CreateModel

@{
    Layout = null;
}

<form id="questLineForm" class="form form--no-gap" method="post">
    <input type="hidden" asp-for="AdventureId" />
    <p class="form__inline">
        <label asp-for="Name" class="form__label"></label>
        <input asp-for="Name" class="form__control" autofocus/>
        <button class="form__button" type="submit" hx-target="body" hx-post="@Url.Page("/QuestLine/Create", new { adventureId = Model.AdventureId })" hx-swap="innerHTML">
            <span>Add</span>
            <svg-inject class="loading htmx-indicator" src="images/puff.svg"></svg-inject>
        </button>
        <a class="form__link">
            Cancel
        </a>
    </p>
    <p>
        <span asp-validation-for="Name"></span>
    </p>
</form>