@page
@model StudentProgress.Web.Pages.QuestLine.CreateModel

@{
    Layout = null;
}

<form class="form" method="post">
    <p class="form__inline">
        <label asp-for="QuestLine.Name" class="form__label"></label>
        <input asp-for="QuestLine.Name" class="form__control"/>
        <button class="form__button" type="submit" hx-target="closest form" hx-post="@Url.Page("/QuestLine/Create", new { adventureId = Model.AdventureId, personId = Model.PersonId })" hx-swap="outerHTML">Add</button>
        <a class="form__link" hx-get="@Url.Page("/Adventure/Index", new { id = Model.AdventureId, personId = Model.PersonId })" hx-target="body">Cancel</a>
    </p>
    <p>
        <span asp-validation-for="QuestLine.Name"></span>
    </p>
</form>