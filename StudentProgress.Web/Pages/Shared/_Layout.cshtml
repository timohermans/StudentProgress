@using System.Web
@using Microsoft.AspNetCore.Routing
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@inject Microsoft.AspNetCore.Routing.LinkGenerator LinkGen

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Student Progress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body hx-boost="true" hx-headers='{"X-XSRF-TOKEN": "@Antiforgery.GetAndStoreTokens(Context).RequestToken"}'>
<mini-profiler/>
<header>
    <nav
        class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark-grey border-bottom box-shadow mb-3">
        <div class="container">
            <div class="flex-grow-1 flex-md-grow-0 d-flex align-items-center">
                <a asp-page="/progress/quickadd" class="quick-add">
                    <svg-inject
                        src="lib/bootstrap-icons/clipboard2-plus.svg">
                    </svg-inject>
                </a>
                <a class="navbar-brand navbar-collapse collapse home-link text-white" asp-area=""
                   asp-page="/Index">
                    Progress
                </a>
            </div>
            <div id="searchComponent" class="d-flex order-sm-1 flex-grow-1 search position-relative" autocomplete="off">
                <input id="search" name="q" type="text" class="form-control" placeholder="search student.."
                       autocomplete="off" hx-get="@LinkGen.GetPathByPage("/People/Parts/Search")"
                       hx-target="#searchResults"
                       hx-trigger="search, keyup changed delay:200ms">
                <div id="searchResults"></div>
            </div>
            <ul class="navbar-nav navbar-collapse collapse order-sm-0 flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/StudentGroups/Index">Groups</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Settings/Index">Settings</a>
                </li>
            </ul>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <span class="navbar-text navbar-collapse collapse flex-grow-0 order-sm-2">
                    <a asp-page="/Logout">
                        Log
                        out
                    </a>
                </span>
            }
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>
<main role="main" class="pb-3 container">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Student Progress - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/htmx/htmx.min.js"></script>
<script src="~/lib/alpinejs/alpine.min.js"></script>
<script src="~/lib/popper/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
        window.isConfirmationPopupDisabled = false;
        window.applicationBaseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(Url.Content("~/"), true));
    </script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>

</html>