@page
@model StudentProgress.Web.Pages.Milestones.Edit

@{
    ViewData["Title"] = "Update";
}

<h1>Update @Model.Command.LearningOutcome - @Model.Command.Artefact</h1>

<section class="row">
    <form class="col-4" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        @Html.HiddenFor(m => m.Command.Id)
        @Html.FormBlock(m => m.Command.LearningOutcome)
        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Comments" rows="1"
                      asp-for="Command.Artefact">@Model.Command.Artefact</textarea>
            <label asp-for="Command.Artefact"></label>
        </div>
        @Html.SubmitBlock("Save")
    </form>
</section>